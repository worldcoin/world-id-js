{
  "name": "@worldcoin/id",
  "type": "module",
  "version": "0.3.0",
  "description": "Integrate World ID (proof-of-personhood) into your Javascript apps.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "!dist/world-id-dev.js"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:declarations && npm run build:esm && npm run build:cjs && npm run build:iife",
    "build:cjs": "node esbuild/production.js -p cjs",
    "build:declarations": "tsc && tsc-alias",
    "build:esm": "node esbuild/production.js -p esm",
    "build:iife": "node esbuild/production.js -p iife",
    "bundle-analyzer": "npx source-map-explorer dist/index.js dist/index.js.map --no-border-checks",
    "clean": "rimraf dist/",
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:kea\" -n APP,KEA -c blue,green",
    "dev:app": "node esbuild/development.js",
    "dev:kea": "kea-typegen watch",
    "format": "prettier -w ./",
    "format:check": "prettier --check ./",
    "lint": "eslint --ext .tsx,.ts,.js,.jsx ./",
    "prebuild": "npm run typegen",
    "prebundle-analyzer": "npm run build:esm",
    "release": "standard-version",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "kea-typegen check && tsc --noEmit --emitDeclarationOnly false --declaration false",
    "typegen": "kea-typegen write"
  },
  "keywords": [
    "web3",
    "proof-of-personhood"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://id.worldcoin.org/docs/js",
  "repository": "github:worldcoin/world-id-js",
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/plugin-syntax-typescript": "7.17.12",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@esbuild-plugins/node-globals-polyfill": "0.1.1",
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "13.3.0",
    "@types/jest": "27.4.1",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "concurrently": "7.0.0",
    "esbuild": "0.14.43",
    "esbuild-jest": "0.5.0",
    "esbuild-node-externals": "1.4.1",
    "esbuild-plugin-alias": "0.2.1",
    "esbuild-plugin-clean": "0.9.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.1",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "kea-test-utils": "0.2.2",
    "kea-typegen": "3.1.0",
    "meow": "10.1.2",
    "prettier": "2.6.0",
    "prettier-eslint": "13.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "3.0.2",
    "standard-version": "9.3.2",
    "tsc-alias": "1.6.6",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@ethersproject/bytes": "5.6.1",
    "@stitches/react": "1.2.8",
    "@walletconnect/client": "1.7.5",
    "js-sha3": "0.8.0",
    "kea": "3.0.1",
    "posthog-js-lite": "0.0.5",
    "qr-code-styling-new": "1.6.1"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
